global:
  scrape_interval: 30s

scrape_configs:
  - job_name: 'node'
    static_configs:
      - targets: ['node-exporter:9100']
  - job_name: 'prometheus'
    static_configs:
      - targets: ['prometheus:9090']
  - job_name: 'flask'
    metrics_path: /metrics
    static_configs:
{% for host in groups['appserver'] %}
      - targets: ['{{ host }}:8000']
        labels:
          instance: flask_{{ host.split('.')[0] }}
{% endfor %}

alerting:
  alertmanagers:
    - static_configs:
        - targets:
            - 'alertmanager:9093'
rule_files:
  - rules.yml